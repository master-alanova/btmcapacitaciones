<header
    class="sticky top-0 z-50 w-full bg-white/90 backdrop-blur-md shadow-sm border-b border-gray-100 transition-all duration-300"
>
    <div
        class="container mx-auto px-4 md:px-6 h-20 flex items-center justify-between"
    >
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2 group">
            <!-- Abstract Pulse/Heart Icon -->
            <div
                class="relative w-24 h-24 flex items-center justify-center transition-transform duration-300"
            >
                <img
                    decoding="async"
                    loading="lazy"
                    src="/brand_BTM_fullcolor.svg"
                    alt="BTM Capacitaciones"
                    class="w-auto object-contain"
                />
            </div>
        </a>

        <!-- Desktop Menu -->
        <nav class="hidden md:flex items-center gap-8">
            <a
                href="#cursos-personales"
                class="text-gray-700 hover:text-btm-blue font-medium transition-colors"
                >Cursos Personales</a
            >
            <a
                href="#soluciones-empresas"
                class="text-gray-700 hover:text-btm-blue font-medium transition-colors"
                >Soluciones Empresas</a
            >
            <a
                href="#sobre-walter"
                class="text-gray-700 hover:text-btm-blue font-medium transition-colors"
                >Sobre Walter</a
            >
        </nav>

        <!-- CTA Button (Desktop) -->
        <div class="hidden md:block">
            <a
                href="#contacto"
                class="bg-btm-red text-white px-6 py-2.5 rounded-full font-bold hover:bg-btm-red-hover transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 flex items-center gap-2"
            >
                INSCRIBIRME AHORA
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-arrow-right"
                    ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"
                    ></path></svg
                >
            </a>
        </div>

        <!-- Mobile Menu Button -->
        <button
            id="mobile-menu-btn"
            class="md:hidden text-gray-700 hover:text-btm-blue focus:outline-none p-2 relative w-10 h-10 flex items-center justify-center"
            aria-label="Menu"
        >
            <!-- Hamburger Icon -->
            <svg
                id="hamburger-icon"
                xmlns="http://www.w3.org/2000/svg"
                width="28"
                height="28"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="absolute transition-all duration-300 opacity-100 scale-100"
            >
                <line x1="4" x2="20" y1="12" y2="12"></line>
                <line x1="4" x2="20" y1="6" y2="6"></line>
                <line x1="4" x2="20" y1="18" y2="18"></line>
            </svg>
            <!-- Close Icon (X) -->
            <svg
                id="close-icon"
                xmlns="http://www.w3.org/2000/svg"
                width="28"
                height="28"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="absolute transition-all duration-300 opacity-0 scale-0 rotate-90"
            >
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
    </div>

    <!-- Mobile Menu Overlay -->
    <div
        id="mobile-menu"
        class="fixed inset-0 top-20 bg-white z-40 transform translate-x-full invisible transition-all duration-300 md:hidden flex flex-col p-8 gap-6 border-t border-gray-100 h-[calc(100vh-80px)]"
    >
        <a
            href="#cursos-personales"
            class="mobile-link text-xl font-medium text-gray-800 border-b border-gray-100 pb-4"
            >Cursos Personales</a
        >
        <a
            href="#soluciones-empresas"
            class="mobile-link text-xl font-medium text-gray-800 border-b border-gray-100 pb-4"
            >Soluciones Empresas</a
        >
        <a
            href="#sobre-walter"
            class="mobile-link text-xl font-medium text-gray-800 border-b border-gray-100 pb-4"
            >Sobre Walter</a
        >
        <a
            href="#contacto"
            class="mobile-link text-center bg-btm-red text-white py-3 rounded-xl font-bold shadow-lg mt-4"
            >INSCRIBIRME AHORA</a
        >
    </div>
</header>

<script>
    // Handle Mobile Menu
    document.addEventListener("astro:page-load", () => {
        const btn = document.getElementById("mobile-menu-btn");
        const menu = document.getElementById("mobile-menu");
        const links = document.querySelectorAll(".mobile-link");
        let isOpen = false;

        function toggleMenu() {
            isOpen = !isOpen;
            const hamburger = document.getElementById("hamburger-icon");
            const close = document.getElementById("close-icon");

            if (isOpen) {
                menu?.classList.remove("translate-x-full", "invisible");
                document.body.style.overflow = "hidden";

                // Toggle icons
                hamburger?.classList.add("opacity-0", "scale-0", "rotate-90");
                hamburger?.classList.remove(
                    "opacity-100",
                    "scale-100",
                    "rotate-0",
                );
                close?.classList.add("opacity-100", "scale-100", "rotate-0");
                close?.classList.remove("opacity-0", "scale-0", "rotate-90");
            } else {
                menu?.classList.add("translate-x-full", "invisible");
                document.body.style.overflow = "";

                // Toggle icons
                hamburger?.classList.remove(
                    "opacity-0",
                    "scale-0",
                    "rotate-90",
                );
                hamburger?.classList.add(
                    "opacity-100",
                    "scale-100",
                    "rotate-0",
                );
                close?.classList.remove("opacity-100", "scale-100", "rotate-0");
                close?.classList.add("opacity-0", "scale-0", "rotate-90");
            }
        }

        btn?.addEventListener("click", toggleMenu);

        links.forEach((link) => {
            link.addEventListener("click", () => {
                if (isOpen) toggleMenu();
            });
        });
    });
</script>
