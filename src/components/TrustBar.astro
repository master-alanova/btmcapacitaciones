<section class="py-12 border-t border-gray-100 bg-gray-50/50">
    <div class="container mx-auto px-4 text-center">
        <p
            class="text-sm font-semibold text-gray-400 uppercase tracking-widest mb-8"
        >
            Nuestros Avales y Certificaciones
        </p>
        <div
            class="flex flex-wrap justify-center items-center gap-12 md:gap-20 opacity-70"
        >
            <!-- ACES International Placeholder -->
            <div
                class="group transition-all duration-300 hover:opacity-100 hover:scale-110 filter grayscale hover:grayscale-0 cursor-pointer"
            >
                <a
                    href="https://www.acesint.org/web/es/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-3xl font-black text-gray-800 flex items-center gap-2 group-hover:text-blue-800"
                >
                    <img
                        src="https://www.acesint.org/web/assets/img/logo.png"
                        alt="ACES International"
                        class="w-auto h-24"
                    />
                </a>
            </div>

            <!-- AIDER Placeholder -->
            <div
                class="group transition-all duration-300 hover:opacity-100 hover:scale-110 filter grayscale hover:grayscale-0 cursor-pointer"
            >
                <a
                    href="https://aider.org/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-3xl font-black text-gray-800 flex items-center gap-2 group-hover:text-red-700"
                >
                    <img
                        src="https://aider.org/web2/wp-content/uploads/2020/04/logo_menu_aider.png"
                        alt="AIDER"
                        class="w-auto h-24"
                    />
                </a>
            </div>
        </div>
    </div>
</section>
