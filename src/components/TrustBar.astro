<section class="py-12 border-t border-gray-100 bg-gray-50/50">
    <div class="container mx-auto px-4 text-center">
        <p
            class="text-sm font-semibold text-gray-400 uppercase tracking-widest mb-8"
        >
            Nuestros Avales y Certificaciones
        </p>
        <div
            class="flex flex-wrap justify-center items-center gap-12 md:gap-20 opacity-70"
        >
            <!-- ACES International Placeholder -->
            <div
                class="group transition-all duration-300 hover:opacity-100 hover:scale-110 filter grayscale hover:grayscale-0 cursor-pointer"
            >
                <div
                    class="text-3xl font-black text-gray-800 flex items-center gap-2 group-hover:text-blue-800"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="40"
                        height="40"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><circle cx="12" cy="12" r="10"></circle><path
                            d="m9 12 2 2 4-4"></path></svg
                    >
                    ACES <span
                        class="text-xs block font-normal text-gray-500 group-hover:text-blue-600"
                        >International</span
                    >
                </div>
            </div>

            <!-- AIDER Placeholder -->
            <div
                class="group transition-all duration-300 hover:opacity-100 hover:scale-110 filter grayscale hover:grayscale-0 cursor-pointer"
            >
                <div
                    class="text-3xl font-black text-gray-800 flex items-center gap-2 group-hover:text-red-700"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="40"
                        height="40"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                        ></path></svg
                    >
                    AIDER
                </div>
            </div>

            <!-- BTM Seal -->
            <div
                class="group transition-all duration-300 hover:opacity-100 hover:scale-110 filter grayscale hover:grayscale-0 cursor-pointer"
            >
                <div
                    class="text-3xl font-black text-gray-800 flex items-center gap-2 group-hover:text-btm-blue"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="40"
                        height="40"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="M22 12h-4l-3 9L9 3l-3 9H2"></path></svg
                    >
                    BTM <span
                        class="text-xs block font-normal text-gray-500 group-hover:text-btm-blue"
                        >Certified</span
                    >
                </div>
            </div>
        </div>
    </div>
</section>
