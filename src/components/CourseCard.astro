---
interface Props {
    slug: string;
    title: string;
    description: string;
    icontype: "heart" | "shield" | "plus" | "kit";
}

const { slug, title, description, icontype } = Astro.props;

const getIcon = (type: string) => {
    switch (type) {
        case "heart":
            return `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>`;
        case "shield":
            return `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/></svg>`;
        case "plus":
            return `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><path d="M21 12H3"/><path d="M10 2v20"/><path d="M14 2v20"/><path d="M12 21H3v-8h18v4"/></svg>`; // Just a generic medical +
        case "kit":
            return `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="6" rx="2"/><path d="M12 12v6"/><path d="M9 15h6"/></svg>`;
        default:
            return `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>`;
    }
};
---

<div
    class={`bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl hover:border-btm-blue/30 transition-all duration-300 group flex flex-col h-full course-card-${slug}`}
>
    <div
        class="mb-4 text-btm-blue bg-blue-50 w-16 h-16 rounded-xl flex items-center justify-center group-hover:scale-110 group-hover:bg-btm-blue group-hover:text-white transition-all duration-300"
    >
        <Fragment set:html={getIcon(icontype)} />
    </div>

    <h3 class="text-xl font-bold text-gray-900 mb-2">{title}</h3>

    <p class="text-gray-600 mb-6 flex-grow">{description}</p>

    <div class="mt-auto">
        <div
            class="flex items-center gap-2 mb-4 text-xs font-semibold text-green-600 bg-green-50 px-3 py-1 rounded-full w-fit"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><path
                    d="m9 11 3 3L22 4"></path></svg
            >
            Incluye Certificado
        </div>

        <button
            class={`enroll-btn block w-full text-center py-2.5 rounded-lg border-2 border-btm-red text-btm-red font-bold hover:bg-btm-red hover:text-white transition-colors duration-300 cursor-pointer enroll-btn-${slug}`}
            data-course={title}
        >
            INSCRIBIRME
        </button>
    </div>
</div>

<script>
    const enrollButtons = document.querySelectorAll(".enroll-btn");

    enrollButtons.forEach((button) => {
        button.addEventListener("click", () => {
            const courseTitle = button.getAttribute("data-course");
            const phoneNumber = "5491131252946";

            const message = `Hola BTM Capacitaciones! Me interesa inscribirme en el curso de *${courseTitle}*. ¿Me podrían dar más información?`;
            const encodedMessage = encodeURIComponent(message);

            const waUrl = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
            window.open(waUrl, "_blank");
        });
    });
</script>
