---
import { ClientRouter } from "astro:transitions";
import CookieConsent from "../components/CookieConsent.astro";
import "../styles/global.css";
import SEOTracking from "../components/SEOTracking.astro";

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const {
	title = "BTM Capacitaciones | Primeros Socorros, RCP y DEA",
	description = "Aprende a salvar vidas con BTM. Formación certificada internacionalmente en Primeros Socorros, RCP y DEA para personas y empresas. ¡Conviértete en el milagro hoy!",
	image = "/cover.png",
} = Astro.props;

const canonicalURL = "https://btmcapacitaciones.com";
const socialImageURL = new URL(image, Astro.site);
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- SEO Meta Tags -->
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href={canonicalURL} />
		<link rel="alternate" hreflang="es" href={canonicalURL} />
		<link rel="alternate" hreflang="x-default" href={canonicalURL} />

		<SEOTracking
			title={title}
			description={description}
			canonicalURL={canonicalURL.toString()}
			socialImageURL={socialImageURL.toString()}
		/>

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={socialImageURL} />
		<meta property="og:site_name" content="AlaNova Digital" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={socialImageURL} />
		<meta property="twitter:site" content="@btm_capacitaciones" />
		<meta property="twitter:creator" content="@btm_capacitaciones" />

		<meta
			name="keywords"
			content="BTM Capacitaciones, Walter Hindle, curso RCP Argentina, capacitación primeros socorros, RCP y DEA para empresas, certificación ACES, certificación AIDER, instructor RCP, curso RCP Buenos Aires, seguridad e higiene laboral, maniobras de Heimlich, RCP avanzado, RCP básico, desfibrilador externo automático entrenamiento, capacitación RCP in-company"
		/>

		<!-- Google Fonts: Inter -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>

		<ClientRouter />
	</head>
	<body
		class="bg-btm-bg text-gray-900 font-sans antialiased selection:bg-btm-blue selection:text-white overflow-x-hidden"
	>
		<!-- Google Tag Manager (noscript) -->
		<noscript
			><iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-KJKV73V7"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe></noscript
		>
		<!-- End Google Tag Manager (noscript) -->

		<slot />
		<CookieConsent />
	</body>
</html>
