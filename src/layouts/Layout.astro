---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { 
	title = "BTM Capacitaciones | RCP y Primeros Auxilios",
	description = "Aprende a salvar vidas con BTM. Formación certificada internacionalmente en RCP y Primeros Auxilios para personas y empresas. ¡Conviértete en el milagro hoy!"
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="RCP capacitaciones, cursos DEA, primeros auxilios, seguridad industrial, ACES AIDER, brigadistas empresas" />
		
		<!-- Google Fonts: Inter -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
		
		<ClientRouter />
	</head>
	<body class="bg-btm-bg text-gray-900 font-sans antialiased selection:bg-btm-blue selection:text-white">
		<slot />
	</body>
</html>
